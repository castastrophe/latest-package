{
    "compilerOptions": {
        "module": "esnext",
        "composite": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "declaration": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "importHelpers": true,
        "inlineSources": true,
        "isolatedModules": true,
        "lib": ["es2020", "dom"],
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "target": "es2020",
        "types": ["node"],
        "typeRoots": ["@types", "node_modules/@types"],
        "pretty": true,
        "listEmittedFiles": false,
        "resolveJsonModule": true
    },
    "include": ["src/*.ts", "@types/*.d.ts", "global.d.ts"],
    "exclude": [],
    "references": []
}
